[user]
  email = creatively.jeong@gmail.com
  name = Changjin Jeong
[credential]
  helper = /usr/share/doc/git/contrib/credential/libsecret/git-credential-libsecret
[alias]
  last = log -1 HEAD
  unstage = reset HEAD --
[core]
  editor = nvim
[diff]
  tool = vimdiff
[merge]
  tool = fugitive
[difftool]
  prompt = false
  trustExitCode = true
[difftool "vimdiff"]
  path = nvim
[mergetool "fugitive"]
  cmd = nvim -f -c "Gvdiffsplit!" "$MERGED"
